<div class="container mt-3">
  <div class="row">
    <div class="col-sm-8 offset-sm-2">
      <h2><%= @article.title %></h2>
      <hr>
      <p><%= @article.content %></p>

      <%= link_to "Go back", articles_path %>
      <%= link_to "Edit", edit_article_path(@article) %>
      <%= link_to "Delete",
        article_path(@article),
        data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
      %>
    </div>
  </div>
</div>
